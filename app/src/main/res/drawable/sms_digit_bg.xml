<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="3.3dp"/>
            <gradient
                android:angle="90"
                android:startColor="#2191ce"
                android:endColor="#00ffe4"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners android:radius="3.3dp"/>
            <solid android:color="#FAFAFA" />
        </shape>
    </item>

</layer-list>